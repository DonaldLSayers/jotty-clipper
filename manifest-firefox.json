{
  "manifest_version": 3,
  "name": "Jotty Clipper",
  "version": "1.2.3",
  "description": "Clip web content to your Jotty notes with smart extraction for Reddit, YouTube, and more",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "js/browser-polyfill.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "clipper@jotty.io"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/content.js",
        "js/browser-polyfill.min.js",
        "js/global.js",
        "js/options.js",
        "js/popup.js",
        "icons/lucide/lucide.min.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}
